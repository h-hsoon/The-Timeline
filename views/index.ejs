<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Posts</title>
</head>
<body>
    <div class="container">
        <h1>Timeline</h1>
        <% posts.forEach(post => { %>
            <div class="post">
                <div class="post-header">
                    <strong><%= post.user %></strong> - <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </div>
                <div class="post-body">
                    <p><%= post.message %></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
